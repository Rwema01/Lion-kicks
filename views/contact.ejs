<%- include('partials/header') %>

<section class="container mx-auto py-12">
    <div class="max-w-2xl mx-auto">
        <h2 class="text-4xl font-bold text-center mb-8">Contact Us</h2>
        
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="mb-6">
                <h3 class="text-xl font-bold mb-2">Get in Touch</h3>
                <p class="text-gray-600">
                    Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
                </p>
            </div>
            
            <form>
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Name</label>
                    <input type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-lion-gold" placeholder="Your name">
                </div>
                
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Email</label>
                    <input type="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-lion-gold" placeholder="your@email.com">
                </div>
                
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Message</label>
                    <textarea class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-lion-gold" rows="5" placeholder="Your message"></textarea>
                </div>
                
                <button type="submit" class="w-full bg-lion-gold text-lion-black py-3 rounded-lg font-semibold hover:bg-yellow-500">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</section>

<%- include('partials/footer') %>