<%- include('partials/header') %>

<section class="container mx-auto py-12">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm text-gray-500 mb-4">
        <a href="/" class="hover:underline">Home</a> / 
        <a href="/shop" class="hover:underline">Shop</a> / 
        <span><%= shoe.name %></span>
    </nav>

```
<h2 class="text-3xl font-bold mb-6"><%= shoe.name %></h2>

<div class="flex flex-col md:flex-row gap-6">
    <!-- Shoe Image -->
    <img src="<%= shoe.image %>" alt="<%= shoe.name %>" class="w-full md:w-1/2 h-64 object-cover rounded-lg shadow-md">

    <!-- Shoe Details -->
    <div class="flex-1 bg-white p-6 rounded-lg shadow-lg">
        <p><strong>Category:</strong> <%= shoe.category %></p>
        <p><strong>Gender:</strong> <%= shoe.gender %></p>
        <p><strong>Price:</strong> $<%= shoe.priceUSD %> / FRW <%= shoe.priceFRW.toLocaleString() %></p>
        <p><strong>Material:</strong> <%= shoe.material || 'N/A' %></p>
        <p><strong>Sizes:</strong> <%= shoe.sizes %></p>
        <p><strong>Stock:</strong> <%= shoe.quantity > 0 ? 'In Stock (' + shoe.quantity + ')' : 'Out of Stock' %></p>

        <!-- Shoe Description -->
        <% if (shoe.description) { %>
            <div class="mt-4">
                <h4 class="font-semibold mb-2">Description:</h4>
                <p class="text-gray-700"><%= shoe.description %></p>
            </div>
        <% } %>

        <!-- Buy Now / Out of Stock Button -->
        <div class="mt-6">
            <% if (shoe.quantity > 0) { %>
                <a href="/buy/<%= shoe.id %>" class="inline-block bg-lion-gold text-lion-black px-6 py-2 rounded-lg font-semibold hover:bg-yellow-500 transition">
                    ðŸ›’ Buy Now
                </a>
            <% } else { %>
                <button class="inline-block bg-gray-400 text-gray-700 px-6 py-2 rounded-lg font-semibold cursor-not-allowed" disabled>
                    Out of Stock
                </button>
            <% } %>
        </div>
    </div>
</div>
